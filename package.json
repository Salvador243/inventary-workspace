{
	"name": "mfes-workspace",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"build:shell": "ng build shell --configuration production",
    "build:authenticator": "ng build authenticator --configuration production",
    "build:tools": "ng build tools --configuration production",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"lint": "eslint \"projects/**/*.{ts,html}\" --max-warnings=10",
		"lint:fix": "eslint \"projects/**/*.{ts,html}\" --fix",
		"lint:check": "eslint \"projects/**/*.{ts,html}\" --max-warnings=10 --format=stylish",
		"lint:authenticator": "eslint \"projects/authenticator/**/*.{ts,html}\" --max-warnings=10",
		"lint:shell": "eslint \"projects/shell/**/*.{ts,html}\" --max-warnings=10",
		"lint:tools": "eslint \"projects/tools/**/*.{ts,html}\" --max-warnings=10",
		"lint:strict": "eslint \"projects/**/*.{ts,html}\" --max-warnings=0"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^20.3.0",
		"@angular/common": "^20.3.0",
		"@angular/compiler": "^20.3.0",
		"@angular/core": "^20.3.0",
		"@angular/forms": "^20.3.0",
		"@angular/platform-browser": "^20.3.0",
		"@angular/router": "^20.3.0",
		"@primeuix/themes": "^1.2.3",
		"@softarc/native-federation-node": "^2.0.10",
		"@tailwindcss/postcss": "^4.1.13",
		"es-module-shims": "^1.5.12",
		"postcss": "^8.5.6",
		"primeicons": "^7.0.0",
		"primeng": "^20.1.2",
		"rxjs": "~7.8.0",
		"tailwindcss": "^4.1.13",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-architects/module-federation": "^20.0.0",
		"@angular-architects/native-federation": "^20.1.6",
		"@angular-devkit/build-angular": "^20.3.1",
		"@angular-eslint/eslint-plugin": "^20.3.0",
		"@angular-eslint/eslint-plugin-template": "^20.3.0",
		"@angular-eslint/schematics": "^20.3.0",
		"@angular-eslint/template-parser": "^20.3.0",
		"@angular/build": "^20.3.1",
		"@angular/cli": "^20.3.1",
		"@angular/compiler-cli": "^20.3.0",
		"@types/jasmine": "~5.1.0",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^58.1.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"jasmine-core": "~5.9.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"typescript": "~5.9.2"
	}
}
